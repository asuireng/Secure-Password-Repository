@using Microsoft.AspNet.Identity;
@model Secure_Password_Repository.Models.CategoryModel
@{
    ViewBag.Title = "Password List";
}

<h2>Password List</h2>

<form id="_CRSFform" action="#" method="post">@Html.AntiForgeryToken()</form>

<ul id="roottree" class="treeview ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion ui-widget ui-sortable ui-accordion-content-active">
    <li class="treeignore treeview ui-accordion ui-widget ui-helper-reset ui-sortable" data-id="0">
        <div><i class="glyphicon glyphicon-folder-open rightfolderpadding"></i>Root</div>
        <ul class="treeview ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion ui-widget ui-sortable ui-accordion-content-active">
            @foreach (var categoryitem in Model.SubCategories.OrderBy(c => c.CategoryOrder))
            {
                @Html.Partial("_CategoryModelItem", categoryitem)
            }
            <li id="addnew-1" class="treeignore">
                <div class="ui-accordion-header ui-state-default ui-corner-all ui-accordion-icons first" role="tab" id="ui-id-1" aria-selected="false" aria-expanded="false" tabindex="-1">
                    <span class="ui-accordion-header-icon ui-icon treeviewicon treeviewplus"></span><span class="btn-group">
                        <a class="btn btn-xs btn-primary" onclick="displayForm('addnew-1'); return false;" href="#">
                            <i class="glyphicon glyphicon-plus-sign">&nbsp;</i>Create New Category
                        </a>
                    </span>
                </div>
                <div class="ui-accordion-header ui-state-default ui-corner-all ui-accordion-icons ui-sortable-handle second" style="display: none;">
                    <span class="ui-accordion-header-icon ui-icon treeviewicon treeviewplus"></span>
                    <i class="glyphicon glyphicon-folder-open rightfolderpadding"></i>
                    @using (Ajax.BeginForm("AddCategory", "Password", new AjaxOptions { HttpMethod = "post", OnSuccess = "createCategorySuccess(data,'1')" }, new { @class = "newcategoryform", role = "form", id = "addform-1" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Category_ParentID, new { Value = "1" })
                        @Html.TextBoxFor(m => m.CategoryName, new { Value = "", PlaceHolder = "Category Name" })
                        <span class="btn-group groupalign"><a href="#" onclick="submitAjaxForm('addform-1');return false;" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-save">&nbsp;</i>Save</a></span>
                    }
                </div>
            </li>
        </ul>
    </li>
</ul>

