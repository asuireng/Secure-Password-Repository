@model Secure_Password_Repository.ViewModels.SystemSettingViewModel
@{
    ViewBag.Title = "System Settings";
}

<h2>System Settings</h2>

@using (Html.BeginForm("EditSystemSettings", "SystemAdministration"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal toppaddding">

        <div class="form-group">
            @Html.LabelFor(model => model.LogoImage, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.LogoImage, htmlAttributes: new { @class = "form-control password-textarea" })
                @Html.ValidationMessageFor(model => model.LogoImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span class="btn-group">
                    <button type="button" value="Update" class="btn btn-primary" onclick="showPasswordSpinner(this,'EditPermission');"><i class="glyphicon glyphicon-edit">&nbsp;<span class="text">Update</span></i></button><button type="button" value="Close" class="btn btn-default" onclick="closeWindow(event);"><i class="glyphicon glyphicon-remove-circle">&nbsp;<span class="text">Close</span></i></button>
                </span>
            </div>
        </div>
    </div>
}